
---
import HeadBase from "../components/HeadBase.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { FULL_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
<head>
    <HeadBase title={FULL_TITLE} />
  </head> 
  <body>
    <Header />
    <main>
<div class="relative bg-[url('/groningen.jpg')] bg-cover py-20 px-4 min-h-[70vh]">
        <div class="relative text-center text-white [text-shadow:_0_0_8px_rgb(0_0_0)]">
          <div class="text-4xl leading-relaxed font-medium">
            The 16th International Conference on Advances in<br />Quantitative Laryngology, Voice and Speech Research
          </div>
          <div class="text-3xl mt-4">Groningen, the Netherlands</div>
          <div class="text-3xl mt-4">June 24th - 27th, 2025</div>
        </div>
        </div>


		<div class='flex py-4 mt-8 text-center'>
				<h2 class="text-blue-900 font-bold text-3xl text-center mt-8">Booking Procedure for Non-Trainees</h2>
				<table>
					<tr>
						<td  class='w-4/12'><p class='text-center mx-auto my-8 px-4'><span class='text-2xl'><b>Trainee  </b></span></span><span class='text-l'>(Bachelor, Master, PhD, post-doc)</span>
						<td  class='w-8/12'><b>Conference with workshop included:</b> €150</td>
					</tr>
				</table>
				<table>
				<tr>
					<td  class='w-4/12'><p class='text-center mx-auto my-8 px-4'><span class='text-2xl'><b>Early Bird  </b></span><span class='text-l'>  (before April 30th)</span></p></td> 
					<td  class='w-4/12'><b>Main conference:</b> €230</td>
					<td  class='w-4/12'><b>Workshop <i>(optional)</i>:</b> + €20</td>
				</tr>
				
				<tr class='text-gray-400'>
					<td  class='w-4/12'><p class='text-gray text-center mx-auto my-8 px-4'><span class='text-2xl'><b>Regular  </b></span><span class='text-l'>  (from April 30th to May 30th)</span></p></td> 
					<td  class='w-4/12'><b>Conference:</b> €280</td>
					<td  class='w-4/12'><b>Workshop <i>(optional)</i>:</b> + €20</td>
				</tr>
			</table>
		
		
	</div>
 
</main>
<Footer />
</body>
</html>
