
---
import HeadBase from "../components/HeadBase.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { FULL_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <HeadBase title={FULL_TITLE} />
  </head>
  <body>
    <Header />
    <main>
        <div class="relative bg-[url('/groningen.jpg')] bg-cover py-20 px-4 min-h-[70vh]">
            <div class="absolute top-0 left-0 bottom-0 right-0 bg-black opacity-20 md:opacity-0">
            </div>
            <div class="relative text-center text-white [text-shadow:_0_0_8px_rgb(0_0_0)]">
                <div class="text-4xl leading-relaxed font-medium">
                  The 16th International Conference on Advances in<br />Quantitative Laryngology, Voice and Speech Research
                </div>
                <div class="text-3xl mt-4">Groningen, the Netherlands</div>
                <div class="text-3xl mt-4">June 24th - 27th, 2025</div>
            </div>
            <p class="text-center mt-12 mb-8"><a href="/submission" class="bg-blue-800 hover:bg-blue-600 transition shadow-md hover:shadow-lg px-8 py-4 text-white rounded-xl font-medium">Submit your abstract</a></p>
        </div>
        
        
        <div class="container px-4 py-4">
            <h2 class="text-blue-900 font-bold text-3xl text-center mt-8">Groningen's House of Connections</h2>
            <div class='container left-20 right-20 top-50 px-4 py-4' >
            
            </div>
        </div>


    </main>
    <Footer />
  </body>
</html>
