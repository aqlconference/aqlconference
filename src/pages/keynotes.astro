
---
import HeadBase from "../components/HeadBase.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { FULL_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <HeadBase title={FULL_TITLE} />
  </head>
  <body>
    <Header />
    <main>
<div class="relative bg-[url('/groningen.jpg')] bg-cover py-20 px-4 min-h-[70vh]">
        <div class="relative text-center text-white [text-shadow:_0_0_8px_rgb(0_0_0)]">
          <div class="text-4xl leading-relaxed font-medium">
            The 16th International Conference on Advances in<br />Quantitative Laryngology, Voice and Speech Research
          </div>
          <div class="text-3xl mt-4">Groningen, the Netherlands</div>
          <div class="text-3xl mt-4">June 24th - 27th, 2025</div>
        </div>
        <p class="text-center mt-12 mb-8"><a href="/submission" class="bg-blue-800 hover:bg-blue-600 transition shadow-md hover:shadow-lg px-8 py-4 text-white rounded-xl font-medium">Submit your abstract</a></p>
</div>

<div class="container px-4 py-4">
	<h2 class="text-blue-900 font-bold text-3xl text-center mt-8">Keynote Speakers</h2>

<table class="mx-auto mt-8 [&_th]:text-right [&_tr>*]:py-2">
	<tbody>
			<tr>
				<td class="w-3/12">				
					<img class="w-6/12 mx-auto"  style='border-radius:50%; overflow:hidden'src="/photo_KailaLStipancic.jpg" alt="">
				</td>
				<td class="w-3/12">				
					<img class="w-6/12 mx-auto"  style='border-radius:50%; overflow:hidden'src="/photo_SonjaKotz.jpg" alt="">
				</td>
				<td class="w-3/12">		
					<img class="w-6/12 mx-auto"  style='border-radius:50%; overflow:hidden' src="/photo_SrikantanNagarajan.jpg" alt="">
				</td>
			</tr>
			<tr>
				<td class='text-center mx-auto my-8'>
						<b>Kaila L. Stipancic</b></br>
						<i>Buffalo Oromotor, Speech, & Swallowing Lab</br>
						University at Buffalo, USA</i>
				</td>
				<td class='text-center mx-auto my-8'>
						<b>Sonja Kotz</b></br>
						<i>Maastricht University, Netherlands</i>
				</td>
				<td class='text-center mx-auto my-8'>
						<b>Srikantan Nagarajan<b></br>
						<i>Department of Radiology and Biomedical Imaging</br>
						University of California, San Francisco</i>
				</td>
			</tr>
			<tr>
				<td class='text-center mx-auto my-12'>
						Date of keynote
				</td>
				<td class='text-center mx-auto my-12'>
						Date of keynote
				</td>
				<td class='text-center mx-auto my-12'>
						Date of keynote
				</td>
			</tr>
          </tbody>
        </table>
</div>

        <p class="text-center mt-12 mb-8"><a href="/programme" class="bg-blue-800 hover:bg-blue-600 transition shadow-md hover:shadow-lg px-8 py-4 text-white rounded-xl font-medium">See the programme</a></p>


    </main>
    <Footer />
  </body>
</html>
