
---
import HeadBase from "../components/HeadBase.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { FULL_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <HeadBase title={FULL_TITLE} />
  </head>
  <body>
    <Header />
    <main>

<div class="relative bg-[url('/groningen.jpg')] bg-cover py-20 px-4 min-h-[70vh]">
        <div class="relative text-center text-white [text-shadow:_0_0_8px_rgb(0_0_0)]">
          <div class="text-4xl leading-relaxed font-medium">
            The 16th International Conference on Advances in<br />Quantitative Laryngology, Voice and Speech Research
          </div>
          <div class="text-3xl mt-4">Groningen, the Netherlands</div>
          <div class="text-3xl mt-4">June 24th - 27th, 2025</div>
        </div>
        <p class="text-center mt-12 mb-8"><a href="/submission" class="bg-blue-800 hover:bg-blue-600 transition shadow-md hover:shadow-lg px-8 py-4 text-white rounded-xl font-medium">Submit your abstract</a></p>
</div>


<div class="container px-4 py-4">
<div class='flex flex-col py-4 mt-8 text-center'>
			<h2 class="text-blue-900 font-bold text-3xl text-center">Accommodation</h2>
	
			
	
				<div class='w-12/12 flex flex-wrap px-4 py-4 mt-8'>
					<div class='w-4/12 flex-1 px-4 py-4 mx-8 mt-8 transition shadow-md shadow-blue-800/50'>
						<p class='text-center mx-auto my-8 px-4'>
						<h2 class="text-blue-900 font-bold text-center mt-8">Trainee - Non-Presenting</h2>
						<img class="mx-auto mt-8"  src="/academie.jpg" alt="">
						<p class='mt-8'><i><b>Double room:</b> €132/night</i><p></br>
							Please email <span class='text-blue-600'><a href="mailto:conferenceaq@gmail.com">conferenceaql@gmail.com</a></span></br>
	 						to make a booking request.
						</p>
					</div>
					<div class='w-8/12 flex-1 px-4 py-4 mx-8 mt-8 shadow-md shadow-blue-800/50'>
						<h2 class="text-blue-900 font-bold text-center mt-8 mb-8">Non-Trainee</h2>
						<table>
							<tr>
								<td><img class="w-10/12 mx-auto"  src="/happytraveller.jpg" alt=""></td>
								<td><img class="w-10/12 mx-auto"  src="/halbert.jpg" alt=""></td>
								</tr>
								<tr>
									<td>
										<p class='text-center mx-auto my-8 px-4'>
										<b>The Happy Traveller</b></br>
										<i>Single room: €70-82 /night</br>
										Double room: €92 /night</br>
										</i>
										</p>
									</td>
									<td>
										<p class='text-center mx-auto my-8 px-4'>
										<b>Hotel Halbert</b></br>
										<i>Double room:</br>€120-€133 /night</i>
										</p>
									</td>
							</tr>
						</table>
					</div>
				</div>
</div>
				</div>
</main>
    <Footer />
  </body>
</html>
